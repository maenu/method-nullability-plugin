<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.jdt.ui.javaEditorTextHovers">
      <hover
            activate="true"
            class="ch.unibe.scg.methodnullabilityplugin.hovers.MethodNullabilityJavadocHover"
            id="ch.unibe.scg.methodnullabilityplugin.hover">
      </hover>
   </extension>
   <extension
         id="ch.unibe.scg.methodnullabilityplugin.marker"
         name="Method-Nullability-Marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="false">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="ch.unibe.scg.methodnullabilityplugin.Startup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.console.consoleFactories">
      <consoleFactory
            class="ch.unibe.scg.methodnullabilityplugin.Console"
            label="nullability console">
      </consoleFactory>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <serviceFactory
            factoryClass="ch.unibe.scg.methodnullabilityplugin.MethodNullabilityServiceFactory">
         <service
               serviceClass="ch.unibe.scg.methodnullabilityplugin.database.MethodNullabilityAccessor"></service>
      </serviceFactory>
   </extension>
   <extension
         point="org.eclipse.jdt.ui.cleanUps">
      <cleanUp
            class="ch.unibe.scg.methodnullabilityplugin.marker.NullabilitySaveAction"
            id="method-nullability-plugin.cleanup.nullabilitysaveaction">
      </cleanUp>
      <cleanUpConfigurationUI
            class="ch.unibe.scg.methodnullabilityplugin.marker.SaveActionUI"
            cleanUpKind="saveAction"
            name="Nullability Save Action">
      </cleanUpConfigurationUI>
      <cleanUpOptionsInitializer
            class="ch.unibe.scg.methodnullabilityplugin.marker.SaveActionOptionsInitializer"
            cleanUpKind="saveAction">
      </cleanUpOptionsInitializer>
   </extension>
</plugin>
